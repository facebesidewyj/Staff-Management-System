<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="user" extends="common" namespace="/">
		<action name="userAction_*" class="pers.yijin.bms.web.action.UserAction" method="{1}">
			<result name="success" type="redirectAction">userAction_home</result>
			<result name="home">/WEB-INF/jsp/home.jsp</result>
			<result name="toRegister">/WEB-INF/jsp/userRegister.jsp</result>
			<result name="register">/WEB-INF/jsp/userLogin.jsp</result>
			<result name="input">/WEB-INF/jsp/userRegister.jsp</result>
			<result name="showUserInfo">/WEB-INF/jsp/userInfo.jsp</result>
			<result name="updateUser">/WEB-INF/jsp/query.jsp</result>
		</action>
	</package>
</struts>